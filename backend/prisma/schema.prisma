generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  role         String        @default("candidate") // ğŸ‘ˆ ××•×¢××“ ××• ××’×™×™×¡
  jobs         Job[]         @relation("UserJobs") // ×× ×”×•× ××’×™×™×¡
  applications Application[] @relation("CandidateApplications") // ×× ×”×•× ××•×¢××“
  createdAt    DateTime      @default(now())
}

model Job {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  company      String
  location     String
  salaryRange  String?
  createdBy    User          @relation("UserJobs", fields: [createdById], references: [id])
  createdById  Int
  createdAt    DateTime      @default(now())
  applications Application[]
}

model Application {
  id          Int      @id @default(autoincrement())
  status      String   @default("pending")
  candidate   User     @relation("CandidateApplications", fields: [candidateId], references: [id])
  candidateId Int
  job         Job      @relation(fields: [jobId], references: [id])
  jobId       Int
  createdAt   DateTime @default(now())

  @@unique([candidateId, jobId])
}
