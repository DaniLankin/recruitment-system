generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model LeadCandidate {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String?  @unique
  phone        String?
  desiredRole  String?
  gender       String?  // "×–×›×¨", "× ×§×‘×”", "××—×¨"
  age          Int?
  experience   Int?     // ×©× ×•×ª × ×™×¡×™×•×Ÿ
  notes        String?
  resume       String?  // ğŸ”— ×§×™×©×•×¨ ×œ×§×•×‘×¥ ×§×•×¨×•×ª ×—×™×™× (Cloudinary ×œ××©×œ)
  createdAt    DateTime @default(now())
}



model User {
  id           Int           @id @default(autoincrement())
  name         String
  email        String        @unique
  password     String
  role         String   // candidate | recruiter | admin
  createdAt    DateTime      @default(now())

  // ×× ×”×•× ××’×™×™×¡ - ×¤×¨×¡× ××©×¨×•×ª
  jobs         Job[]         @relation("UserJobs")

  // ×× ×”×•× ××•×¢××“ - ×”×’×™×© ××•×¢××“×•×™×•×ª
  applications Application[] @relation("CandidateApplications")
}

model Job {
  id           Int           @id @default(autoincrement())
  title        String
  description  String
  company      String
  location     String
  salaryRange  String?
  createdAt    DateTime      @default(now())

  // ××™ ×©×¤×¨×¡× ××ª ×”××©×¨×”
  createdBy    User          @relation("UserJobs", fields: [createdById], references: [id])
  createdById  Int

  // ×”×’×©×•×ª ×œ××©×¨×”
  applications Application[]
}

model Application {
  id           Int      @id @default(autoincrement())
  status       String   @default("pending")
  createdAt    DateTime @default(now())
  resume       String?  // âœ… ×›××Ÿ × ×©××¨ ×§×•×‘×¥ ×”Ö¾PDF

  // ×§×™×©×•×¨ ×œ××©×¨×”
  job          Job      @relation(fields: [jobId], references: [id])
  jobId        Int

  // ×§×™×©×•×¨ ×œ××•×¢××“
  candidate    User     @relation("CandidateApplications", fields: [candidateId], references: [id])
  candidateId  Int
}


